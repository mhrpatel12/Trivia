<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <padding android:bottom="@dimen/fab_margin" />
            <padding android:top="@dimen/fab_margin" />
            <padding android:left="@dimen/fab_margin" />
            <padding android:right="@dimen/fab_margin" />
            <solid android:color="#1c5fab" />
            <corners android:bottomRightRadius="@dimen/radius_radio_button"
                android:bottomLeftRadius="@dimen/radius_radio_button"
                android:topLeftRadius="@dimen/radius_radio_button"
                android:topRightRadius="@dimen/radius_radio_button" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/fab_margin" />
            <padding android:top="@dimen/fab_margin" />
            <padding android:left="@dimen/fab_margin" />
            <padding android:right="@dimen/fab_margin" />
            <solid android:color="#ffffff" />
            <corners android:bottomRightRadius="@dimen/radius_radio_button"
                android:bottomLeftRadius="@dimen/radius_radio_button"
                android:topLeftRadius="@dimen/radius_radio_button"
                android:topRightRadius="@dimen/radius_radio_button" />
        </shape>
    </item>

</selector>